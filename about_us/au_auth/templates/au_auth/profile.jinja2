{%extends "about_us/base.jinja2"%}

{%block title%}
    {{profile.user}}
{%endblock%}

{%block content%}
    <div class="row">
        <div class="col s6">
            <h2 class="center">Abouts - {{profile.user}}</h2>
            <div class="row">
                <form  action="{% url "au_about:new"%}" class="col s12">
                    {% csrf_token %}
                    <input type="hidden" name="profile" id="profile" value="{{profile.id}}">
                    <div class="row">
                        <div class="input-field col s12">
                            <textarea  name="comment" id="comment" id="textarea1" class="materialize-textarea"></textarea>
                            <label for="textarea1">Escreva um About</label>
                            <button class="btn btn-medium waves-effect waves-light" type="submit" name="action">Enviar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col s6">
            <br>
            <br>
            {%for about in abouts%}
                <div class="row">
                    <div class="col  s12 ">
                        <div class="card blue lighten-5">
                            <div class="card-content black-text center">
                                <p>{{about.comment}} </p>
                            </div>
                            <div class="card-action">
                                <div class="row">
                                    <div class="col s6">
                                        <a class="btn btn-medium waves-effect waves-light red accent-4"href="{% url "au_about:negative" about.id %}" >
                                            <div>
                                                ({{about.negative_votes}}) Mentira <i class="small material-icons">thumb_down</i>
                                            </div>
                                        </a>

                                    </div>
                                    <div class="col s6 right-align">
                                        <a class="btn btn-medium waves-effect waves-light green accent-4"href="{% url "au_about:positive" about.id %}">
                                            <div>
                                                ({{about.positive_votes}}) Verdade <i class="medium material-icons">thumb_up</i>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {%endfor%}
        </div>
    </div>

{%endblock%}
